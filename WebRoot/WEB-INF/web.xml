		<filter-name>loginFilter</filter-name>
		<filter-class>com.bktravel.sys.account.filter.LoginFilter</filter-class>
	</filter>
	<filter-mapping>
		<filter-name>loginFilter</filter-name>
		<url-pattern>/admin/*</url-pattern>
	</filter-mapping> -->

	<!-- gzip的压缩能 -->
	<filter>
		<filter-name>gZip</filter-name>
		<filter-class>com.bkweb.common.filter.GzipFilter</filter-class>
	</filter>
	<filter-mapping>
		<filter-name>gZip</filter-name>
		<url-pattern>/admin/*</url-pattern>
		<url-pattern>*.bmp</url-pattern>
		<url-pattern>*.js</url-pattern>
		<url-pattern>*.css</url-pattern>
		<url-pattern>/</url-pattern>
	</filter-mapping>

	<!-- springmvc配置 -->
	<servlet>
		<servlet-name>springMVC</servlet-name>
		<servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>
		<init-param>
			<param-name>contextConfigLocation</param-name>
			<param-value>classpath:/config/springmvc.xml</param-value>
		</init-param>
		<load-on-startup>1</load-on-startup>
	</servlet>
	<servlet-mapping>
		<servlet-name>springMVC</servlet-name>
		<url-pattern>/</url-pattern>
	</servlet-mapping>

	<!-- hibernate的session控制 -->
	<filter>
		<filter-name>OpenSessionInViewFilter</filter-name>
		<filter-class>org.springframework.orm.hibernate4.support.OpenSessionInViewFilter</filter-class>
	</filter>
	<filter-mapping>
		<filter-name>OpenSessionInViewFilter</filter-name>
		<url-pattern>/admin/*</url-pattern>
	</filter-mapping>

	<!-- 404情况过滤器 -->
	<filter>
		<filter-name>notFound</filter-name>
		<filter-class>com.bktravel.sys.log.filter.NotFoundErrorFilter</filter-class>
	</filter>
	<filter-mapping>
		<filter-name>notFound</filter-name>
		<url-pattern>/WEB-INF/views/error/404.jsp</url-pattern>
		<dispatcher>ERROR</dispatcher>
	</filter-mapping>
	<!-- 配置404跳转页面 -->
	<error-page>
		<error-code>404</error-code>
		<location>/WEB-INF/views/error/404.jsp</location>
	</error-page>
	
	<error-page>
		<error-code>403</error-code>
		<location>/WEB-INF/views/error/403.jsp</location>
	</error-page>
</web-app>